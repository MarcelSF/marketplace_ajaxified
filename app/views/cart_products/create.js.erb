// Find the Add to Cart btn that was clicked
addToCartBtn = document.getElementById("<%= @product.id %>")
// Create the Remove from Cart btn that we want to insert into the HTML
removeFromCartBtn = "<%= j link_to 'Remove from Cart', cart_product_path(@cart_product.id), method: :delete, class: 'btn btn-danger', remote: true, id: "#{@product.id}" %>";

// Find the parentElement of the Add to Cart Btn, which is the li
// so that we can insert the Remove from Cart btn in the correct place
li = addToCartBtn.parentElement;

// Remove the Add to Cart btn from the HTML
addToCartBtn.remove();

// Insert the Remove from Cart btn to the li
li.insertAdjacentHTML("beforeend", removeFromCartBtn);
