<h1>Welcome to my Marketplace</h1>

<ul>
  <% @products.each do |product| %>
    <li>
      <%= "#{product.name} - #{formatted_price(product.price)}" %>

      <% if product.is_it_in_the_shopping_cart?(current_user) %>
        <%= link_to "Remove from Cart",
            cart_product_path(product.cart_product(current_user)), method: :delete, class: 'btn btn-danger', remote: true %>
      <% else %>
        <%= link_to "Add to Cart",
          cart_products_path(product_id: product.id), method: :post, class: 'btn btn-primary', remote: true %>
      <% end %>

    </li>
  <% end %>
</ul>
